import networks as nx
import matplotlib.pyplot as plt
adj_matrix=[
    [0,1,1,0],
    [1,0,1,0],
    [1,1,0,1],
    [0,0,1,0]
]
G=nx.Graph()
for i in range(len(adj_matrix)):
    for j in range(len(adj_matrix[i])):
        if adj_matrix[i][j]==1:
            G.add_edge(i,j)
#Define the labels for the graph
labels={0:"A",1:"B",2:"C",3:"D"}
#Draw the graph
pos=nx.spring_layout(G)
nx.draw(G,pos,with_labels=True,labels=labels,node_size=700,node_color=blue,font_size=10)

plt.show()
    
