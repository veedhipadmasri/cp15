#creating and displaying a directed graph
class Graph:
    def __init__(self):
        self.graph={}
    def add_vertex(self,vertex):
        if vertex not in self.graph:
            self.graph[vertex]=[]
    def display(self):
        for vertex in self.graph:
            print(vertex,"->","->".join(map(str,self.graph[vertex])))
#example usage:
g=Graph()
g.add_vertex(1)
g.add_vertex(2)
g.add_vertex(3)
g.add_vertex(4)

g.display()
